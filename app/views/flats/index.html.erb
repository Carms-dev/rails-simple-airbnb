
<div class="mb-5">
  <h1>AyBnB</h1>
  <h4>Home is where you are ;)</h4>
</div>

<div class="row d-flex justify-content-around">
  <% @flats.each do |flat|%>
    <div class="card m-2" style="width: 18rem;">
      <% if flat.images.empty? %>
        <img src="https://source.unsplash.com/1600x900/?house" class="card-img-top" alt="house">
      <% else %>
        <img src="<%= flat.images.first.url %>" class="card-img-top" alt="house">
      <% end %>
      <div class="card-body d-flex flex-column justify-content-between">
        <div>
          <h5 style="height: 48px;"class="card-title"><%= truncate(flat.name, length: 45) %></h5>
          <p style="height: 72px;"class="card-text"><%= truncate(flat.description, length: 90) %></p>
        </div>

        <div>
          <div class="card-text d-flex justify-content-around my-4">
            <div><i class="fas fa-users"></i> <%= flat.number_of_guests %></div>
            <div><i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></div>
          </div>
          <div align="center" class="d-flex justify-content-around border-top pt-3">
            <%= link_to flat_path(flat) do %>
              <i class="fas fa-info-circle"></i>
            <% end %>
            <%= link_to edit_flat_path(flat) do %>
              <i class="far fa-edit"></i>
            <% end %>

            <%= link_to flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
